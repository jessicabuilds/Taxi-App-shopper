{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Modo Debug",
      "runtimeExecutable": "nodemon",
      "args": [
        "-r",
        "ts-node/register/transpile-only",
        "-r",
        "tsconfig-paths/register",
        "./src/index.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/src/**/*.ts"],
      "watch": true
    }
  ]
}
